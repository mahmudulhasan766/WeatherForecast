<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/pic"
    android:weightSum="6"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#60f3faff">

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center|start"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:id="@+id/showLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhaka,Bangladesh"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/showTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26 Â°C"
                        android:textSize="26sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/showCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fresh Weather"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/showWindFlow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind: 2.6 m/s"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/showPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pressure: 1009.0 hPa"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/showHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity: 88%"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/showWeatherImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:id="@+id/showUpdatedDate"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:text="Last Update: 2.40 PM"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
