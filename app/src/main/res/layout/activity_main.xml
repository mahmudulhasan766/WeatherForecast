                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/custom_edittext"
                                android:layout_height="wrap_content">
                                <LinearLayout
